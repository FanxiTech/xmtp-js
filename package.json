{
  "name": "xmtp-js",
  "version": "0.2.2",
  "description": "XMTP client SDK for interacting with XMTP networks.",
  "main": "dist/cjs/src/index.js",
  "module": "dist/esm/src/index.js",
  "umd:main": "dist/umd/src/index.js",
  "types": "dist/types/src/index.d.js",
  "scripts": {
    "build": "npm run build:proto && npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:types",
    "build:proto": "npm run clean:proto && buf generate",
    "build:cjs": "node tools/cleanup cjs && tsc -p config/tsconfig.cjs.json",
    "build:esm": "node tools/cleanup esm && tsc -p config/tsconfig.esm.json",
    "build:umd": "node tools/cleanup umd && webpack --config config/webpack.config.js",
    "build:types": "node tools/cleanup types && tsc -p config/tsconfig.types.json",
    "clean": "node tools/cleanup && npm run clean:proto",
    "clean:proto": "rm -rf src/proto/*.ts",
    "package": "npm run build && npm pack",
    "test": "ts-mocha --timeout=30000 test/*.ts test/**/*.ts",
    "addscope": "node tools/packagejson name @xmtp-org/xmtp-js",
    "lint": "prettier --check . && eslint .",
    "autolint": "prettier --write . && eslint --fix ."
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "xmtp",
    "messaging",
    "web3",
    "sdk",
    "js",
    "javascript",
    "node",
    "nodejs"
  ],
  "author": "XMTP Labs <eng@xmtp.com>",
  "license": "MIT",
  "homepage": "https://github.com/xmtp-org/xmtp-js",
  "repository": {
    "type": "git",
    "url": "git@github.com:xmtp-org/xmtp-js.git"
  },
  "bugs": {
    "url": "https://github.com/xmtp-org/xmtp-js/issues"
  },
  "dependencies": {
    "@noble/secp256k1": "^1.5.2",
    "callback-to-async-iterator": "^1.1.1",
    "ethers": "^5.5.3",
    "js-waku": "^0.15.0",
    "protobufjs": "^6.11.2"
  },
  "devDependencies": {
    "@types/bl": "^5.0.2",
    "@types/callback-to-async-iterator": "^1.1.4",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.0",
    "localstorage-polyfill": "^1.0.1",
    "prettier": "^2.4.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "ts-loader": "^9.2.5",
    "ts-mocha": "^9.0.2",
    "ts-proto": "^1.104.0",
    "typescript": "^4.4.3",
    "util": "^0.12.4",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  }
}
