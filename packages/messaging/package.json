{
  "name": "xmtp-client-messaging",
  "version": "0.1.0",
  "description": "Client API supporting asynchronous messaging operations across the XMTP network",
  "main": "lib/index.js",
  "module": "src/index.ts",
  "types": "./types/index.d.ts",
  "scripts": {
    "clean": "rimraf lib && rimraf types",
    "type-check": "tsc --noEmit",
    "type-check:watch": "pnpm type-check -- --watch",
    "build": "pnpm clean && pnpm build:types && pnpm build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.js\" --source-maps inline",
    "test": "ts-mocha test/*.ts",
    "coverage": "nyc npm run test"
  },
  "keywords": [
    "xmtp",
    "web3",
    "web3 messaging",
    "messaging",
    "wallet messaging"
  ],
  "author": "XMTP",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/node": "^17.0.8",
    "chai": "^4.3.4",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@noble/hashes": "^0.5.9",
    "@noble/secp256k1": "^1.4.0",
    "js-waku": "^0.14.2",
    "node": "^17.3.0",
    "node-fetch": "^3.1.0",
    "sha3": "link:@noble/hashes/sha3"
  }
}
