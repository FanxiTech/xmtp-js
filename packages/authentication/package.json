{
  "name": "xmtp-client-auth",
  "version": "0.1.0",
  "description": "Wallet-based authentication for interacting with the XMTP protocol",
  "main": "lib/index.js",
  "module": "src/index.ts",
  "types": "./types/index.d.ts",
  "scripts": {
    "clean": "rimraf lib && rimraf types",
    "type-check": "tsc --noEmit",
    "type-check:watch": "pnpm type-check -- --watch",
    "build": "pnpm clean && pnpm build:types && pnpm build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.js\" --source-maps inline",
    "test": "mocha",
    "coverage": "nyc npm run test"
  },
  "keywords": [
    "xmtp",
    "web3",
    "authentication",
    "web3",
    "messaging",
    "wallet",
    "authentication"
  ],
  "author": "XMTP",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "chai": "^4.3.4",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@metamask/detect-provider": "^1.2.0",
    "@walletconnect/client": "^1.7.0",
    "ethers": "^5.5.2",
    "walletlink": "^2.4.0"
  }
}
