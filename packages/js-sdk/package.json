{
  "name": "xmtp-js-sdk",
  "version": "0.1.0",
  "description": "The XMTP JavaScript SDK package bundles the core code libraries required for building client experiences on top of the XMTP protocol and network.",
  "main": "dist/xmtp-js-sdk.js",
  "module": "dist/xmtp-js-sdk.esm.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "pnpm type-check -- --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "build:bundle": "rimraf dist && rollup -c rollup.config.js",
    "build": "pnpm build:types && pnpm build:bundle",
    "test": "mocha"
  },
  "keywords": [
    "xmtp",
    "xmtp",
    "sdk",
    "javascript",
    "sdk",
    "js",
    "sdk",
    "web3",
    "web3",
    "messaging"
  ],
  "author": "XMTP",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.2",
    "@types/bluebird": "^3.5.36",
    "chai": "^4.3.4",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.63.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "xmtp-client-auth": "workspace:../authentication",
    "xmtp-client-messaging": "workspace:../messaging"
  }
}
